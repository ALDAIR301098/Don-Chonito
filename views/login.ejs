<!DOCTYPE html>
<html lang="es">

<head>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Don Chonito</title>

    <link rel="stylesheet" href="resources/css/login.css">
    <link rel="stylesheet" href="resources/css/theme.css">

</head>

<body>

    <header>
        <img src="resources/images/logo_don_chonito.png" alt="Logo">
        <h1>Panaderia Don Chonito</h1>
    </header>

    <main>
        <div class="login-container-main">
            <img src="resources/images/img_bakery.jpg" alt="Panaderia">
            <div class="login-container">
                <h1>Iniciar sesión</h1>
                <form action="/auth" method="post">
                    <label for="mail">Correo electronico:</label><br>
                    <input type="text" id="mail" name="mail" value="" required><br>
                    <label for="password">Contraseña:</label><br>
                    <input type="password" id="password" name="password" value="" required><br><br>
                    <input type="submit" class="btn-login" value="Finalizar">
                </form>
                <button class="btn-register">
                    <a href="/register"></a>
                    Registrarme</button>
            </div>
        </div>
    </main>

    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <% if (typeof alert != "undefined") { %>
        <script>
            Swal.fire({
                title:'<%= alertTitle %>',
                text:'<%= alertMessage %>',
                icon:'<%= alertIcon %>',
                showConfirmButton: <%= showConfirmButton %>,
                timer: <%= timer %>
            }).then(()=>{
                window.location='<%= ruta %>'
            })
        </script>
      <% } %>

</body>

</html>